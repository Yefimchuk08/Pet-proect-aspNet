@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="text-center p-5 bg-light rounded shadow-sm">
        <h1 class="display-4">Welcome to JobBoard</h1>
        <p class="lead">Find your dream job or the perfect candidate today.</p>
    </div>

    <!-- Popular Categories -->
    <section class="mt-5">
        <h2 class="mb-4 text-center">Popular Job Categories</h2>
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm p-3">
                    <i class="bi bi-code-slash display-4 text-primary"></i>
                    <h5 class="mt-3">IT & Development</h5>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm p-3">
                    <i class="bi bi-bar-chart display-4 text-success"></i>
                    <h5 class="mt-3">Marketing</h5>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm p-3">
                    <i class="bi bi-gear display-4 text-warning"></i>
                    <h5 class="mt-3">Engineering</h5>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm p-3">
                    <i class="bi bi-people display-4 text-danger"></i>
                    <h5 class="mt-3">HR & Management</h5>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Companies -->
    <section class="mt-5">
        <h2 class="text-center mb-4">Featured Companies</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm">
                    <h5>TechCorp</h5>
                    <p>Leading tech company offering innovative solutions.</p>
                    <a href="/Companies/Details/1" class="btn btn-outline-primary btn-sm">View Jobs</a>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm">
                    <h5>InnovateX</h5>
                    <p>Startup driving change in AI and automation.</p>
                    <a href="/Companies/Details/2" class="btn btn-outline-primary btn-sm">View Jobs</a>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm">
                    <h5>SoftVision</h5>
                    <p>Software company focused on UX and development.</p>
                    <a href="/Companies/Details/3" class="btn btn-outline-primary btn-sm">View Jobs</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="mt-5 text-center p-4 bg-primary text-white rounded">
        <h3>Ready to take the next step?</h3>
        <p>Create your profile and start applying today!</p>
        <a href="/Account/Register" class="btn btn-light btn-lg">Sign Up</a>
    </section>
</div>
