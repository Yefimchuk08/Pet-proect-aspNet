@model DataAccess.Entities.Job;

<div class="text-center">
	<div class="card">
		<div class="card-header">
			Vacancy Detail Information
		</div>
        <div class="vacancy-image">
            <img src="@Model.ImageUrl" alt="Vacancy photo" class="vacancy-photo" />
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary">@Model.Title</h5>
            <p class="card-text mb-2 text-muted">@Model.Description</p>

            <ul class="list-unstyled mb-3">
                <li><i class="bi bi-geo-alt"></i> <strong>@Model.LSocation</strong></li>
                <li><i class="bi bi-cash"></i> @Model.SalaryMin$ - @Model.SalaryMax$</li>
            </ul>
	    </div>
        <div class="d-flex gap-2 mt-3">
            <div class="w-50">
                <button type="submit" class="btn btn-success w-100">Apply</button>
            </div>
            <div class="w-50">
                <a asp-action="Index" class="btn btn-danger w-100">Back</a>
            </div>
        </div>
</div>